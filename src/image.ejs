<svg width="669" height="104" xmlns="http://www.w3.org/2000/svg">
    <style>
        * {
            font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbolsans-serif;
        }
        .month, .wday {
            fill: #767676;
        }
        .month {
            font-size: 10px;
        }
        .wday {
            font-size: 9px;
        }
    </style>
    <g>
        <!-- Grid -->
        <g transform="translate(17, 20)">
            <% for (let w = 1; w <= 52; w++) { %>
                <g>
                    <% for (let d = 0; d < 7; d++) { %>
                        <rect width="10" height="10" x="<%= 12 * w %>" y="<%= 12 * d %>" fill="<%= getFill(52 - w, d) %>"></rect>
                    <% } %>
                </g>
            <% } %>
        </g>

        <!-- Month Labels -->
        <g transform="translate(29, 10)">
            <% for (let m = 1; m <= 12; m++) { %>
                <text class="month" x="<%= getMonthX(m) %>"><%= getMonthLabel(m) %></text>
            <% } %>
        </g>

        <!-- Week Labels -->
        <text class="wday" dx="2" dy="40">Mon</text>
        <text class="wday" dx="2" dy="64">Wed</text>
        <text class="wday" dx="2" dy="89">Fri</text>
    </g>
</svg>